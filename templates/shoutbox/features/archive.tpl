<div class="modal fade" id="shoutbox-archive-modal" role="dialog" aria-labelledby="shoutboxModalArchive" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="shoutboxModalArchive">[[shoutbox:archive_name]]</h4>
            </div>
            <div class="modal-body">
                <div id="shoutbox-archive-content" class="well well-sm"></div>
            </div>
            <div class="modal-footer">
                <button id="shoutbox-button-archive-prev" type="button" class="btn btn-default pull-left">&larr; [[shoutbox:older]]</button>
                <button id="shoutbox-button-archive-next" type="button" class="btn btn-default pull-right">[[shoutbox:newer]] &rarr;</button>
            </div>
        </div>
    </div>
</div>